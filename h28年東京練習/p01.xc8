#include <xc.h>

#define _XTAL_FREQ 48000000

#define l0 LATBbits.LATB0			//左の７セグメントLED
#define l1 LATBbits.LATB1			//右の７セグメントLED
#define l7 LATDbits.LATD7			//クロック
#define de __delay_ms				//ディレイ関数
#define YSW PORTEbits.RE0
#define BSW PORTEbits.RE1

//定数の宣言

int l7s[] ={						//７セグメントLEDの表示設定
	0b11000000,		//0
	0b11111001,		//1
	0b10100100,		//2
	0b10110000,		//3
	0b10011001,		//4
	0b10010010,		//5
	0b10000010,		//6
	0b11011000,		//7
	0b10000000,		//8
	0b10010000,		//9
	0b10001000,		//A---10
	0b10000011,		//b---11
	0b11000110,		//C---12
	0b10100001,		//d---13
	0b10000110,		//E---14
	0b10001110,		//F---15
	0b10111111,		//----16
	0b11000111,		//L---１７
	0b10001001,		//H---１８
};

//変数の宣言＆初期化
int	a = 0,			//左の７セグメントLEDのデータ用
	b = 0,			//右の７セグメントLEDのデータ用
	c = 0,			//カウント用
	i = 0,			//未使用
	j = 0,			//未使用
	k = 0,			//未使用
	f = 0,			//フラグ用
	f2 = 0,			//フラグ用
	f3 = 0;			//フラグ用

//関数の宣言
void set(void);			//PICの初期化設定

/*============================
		メイン関数
============================*/

void main(void){
	set();
	
	while(1){						//永久ループ
		for(c=0;c<1000;c++){		//1秒間Lを表示
			LATD = l7s[17];			
			l1 = 0;
			de(1);
		}
		
		for(c=0;c<1000;c++){		//１秒間Hを表示
			LATD = l7s[18];
			l1 = 0;
			de(1);
		}
	}
}

/*============================
			自作関数
============================*/
void set(void){				//PICの初期化設定
	ADCON1 |= 0x01;			//ADコンバータOFF
	
	TRISA = 0b00000111;		//入出力の設定
	TRISB = 0b00000000;
	TRISC = 0b00000111;
	TRISD = 0b00000000;
	TRISE = 0b00000111;

	PORTA = 0;				//ポートの初期化
	PORTB = 0;
	PORTC = 0;
	PORTD = 0;
	PORTE = 0;
	
	l0 = 1;					//LEDをOFF
	l1 = 1;
}